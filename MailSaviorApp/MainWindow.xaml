<Window x:Class="MailSaviorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MailSavior - Connexion" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#f4f4f4">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="MailSavior" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Nom d'utilisateur" Margin="0,0,0,5" />
            <TextBox x:Name="UsernameBox" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Mot de passe" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20" />

            <Button Content="Se connecter" Height="35" Background="#3498DB" Foreground="White"
                    FontWeight="SemiBold" Click="LoginButton_Click"/>

            <TextBlock x:Name="ErrorMessage" Text="Identifiants incorrects." Foreground="Red"
                       Visibility="Collapsed" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
